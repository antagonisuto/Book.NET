@model ViewModels.CreateRoleViewModel

@{
    Layout = "_Layout";
    var title = "Create Role";
    ViewData["Title"] = title;
}

<div class="container justify-content-md-center" style="width: 50%;">
    <h3 class="text-info text-center" style="margin:20px;">@title</h3>
    
        <form asp-action="CreateRole" method="post" style="padding-bottom:10%">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            <div class="form-group">
                <label asp-for="Role_Name"></label>
                <input asp-for="Role_Name" class="form-control" />
                <span asp-validation-for="Role_Name" class="text-danger"></span>
            </div>
             <button type="submit" class="btn btn-info btn-block">
                        Create New Role 
                    </button>
        </form>
 </div>