@model FinalProject.Models.BooksHaveAuthors

@{
    Layout = "_Layout";
    var title = "CREATE BooksHaveAuthors";
    ViewData["Title"] = title;
}

<div class="container justify-content-md-center" style="width: 50%;">
    <h3 class="text-info text-center" style="margin:20px;">@title</h3>
    
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Book_id" class="control-label"></label>
                    <select asp-for="Book_id" class="form-control" asp-items="ViewBag.Book_id"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Author_id" class="control-label"></label>
                    <select asp-for="Author_id" class="form-control" asp-items="ViewBag.Author_id"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-info btn-block" />
                </div>
            </form>
</div>

