@model FinalProject.Models.BooksInventory

@{
    Layout = "_Layout";
    var title = "UPDATE BooksInventory";
    ViewData["Title"] = title;
}

<div class="container justify-content-md-center" style="width: 50%;">
    <h3 class="text-info text-center" style="margin:20px;">@title</h3>


<form asp-action="Update" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <!--<input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="SurveyId" />-->
    <div class="form-group">
        <label id="Book_id" name="Book_id" class="control-label">Book_id</label>
        <input id="Book_id" name="Book_id" class="form-control" value="@Model.Book_id" />
    </div>
    <div class="form-group">
        <label id="User_id" name="User_id" class="control-label">User_id</label>
        <input id="User_id" name="User_id" class="form-control" value="@Model.User_id" />
    </div>
    <button type="submit" class="btn btn-info btn-block">Submit</button>
</form>
</div>

