@{
    Layout = "_Layout";
    var title = "Welcome";
    ViewData["Title"] = title;
}

<section class="text-center">
    <div class=" container" style="background:white;">
        <img src="/img/girl.png" style="height: 400px; width: auto;">
        <h1 class="jumbotron-heading">Welcome to the "Book Lover"</h1>
        <p class="lead text-muted">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>
            <a class="btn btn-info my-2" style="width:40%; margin-top:10%" asp-controller="account" asp-action="login">Let's start</a>
            <p><small class="text-muted"> If you want to be a members, please contuct us</small></p>
    </div>
</section>
<div class="container" style="width:70%">
    <h3 class="text-info text-center" style="margin-top:10%"> Chatting with your book lovers</h3>
    <div class="containe justify-content-md-center">
        <div class="row">&nbsp;</div>
        <div class="form-group">
            <label>User</label>
            <input type="text" class="form-control" id="userInput" />
        </div>
        <div class="form-group">
            <label>Message</label>
            <input type="text" class="form-control" id="messageInput" />
        </div>
        <div class="row">&nbsp;</div>
            <input type="button" class="btn btn-outline-info btn-block " id="sendButton" value="Send Message" />
        <div class="text-info" style="margin-top:5%">
            Answers to your soulmate:
        </div>
            <ul id="messagesList"></ul>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>

